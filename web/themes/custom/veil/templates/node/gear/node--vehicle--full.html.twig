{% extends "@veil/node/chars/node--creature--full.html.twig" %}
{% block callout_content %}
  {{ parent() }}
  {% if content.field_stats|field_value %}<li><strong>Durability:</strong> {{ content.field_stats|field_raw('dur') }}</li>{% endif %}
  {% if content.field_linked_skill|field_value %}<li><strong>Skill:</strong> {{ content.field_linked_skill|field_value }}</li>{% endif %}
  {% if content.field_skill_bonus|field_value %}<li><strong>Handling:</strong> {{ content.field_skill_bonus|field_value }}</li>{% endif %}
  {% if content.field_passengers|field_value %}<li><strong>Stress:</strong> {{ content.field_passengers|field_value }}</li>{% endif %}
{% endblock %}
{% block stats %}{% endblock %}
