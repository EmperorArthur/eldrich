{#
/*
 * For Augmentations:
 * - content.field_morph_types: The morph types the augmentation can be installed on
 * - content.field_stats: Stat bonuses.
 * - content.field_skills: Skill bonuses.
 * - content.field_is_conditional: Whether said bonuses are always-on or conditional.
 */
#}
{% extends "@veil/node/node--full.html.twig" %}
{% block callout_content %}
  {{ parent() }}
  {% if content.field_stats|field_value %}<li><strong>Stat bonuses:</strong> {{ content.field_stats|field_value|safe_join(', ') }}</li>{% endif %}
  {% if content.field_skills|field_value %}<li><strong>Skill bonuses:</strong> {{ content.field_skills|field_value|safe_join(', ') }}</li>{% endif %}
  {% if content.field_morph_types|field_value %}<li><strong>Valid morphs:</strong> {{ content.field_morph_types|field_value|safe_join(', ') }}</li>{% endif %}
{% endblock %}
{% block stats %}{% endblock %}
