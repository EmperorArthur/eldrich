{% set properties = ['cog', 'coo', 'int', 'ref', 'sav', 'som', 'wil'] %}
<table class="table table-condensed table-bordered table-statblock">
  <thead>
    <th class="empty"></th>
  {% for property in properties %}
    <th>{{ property|upper }}</th>
  {% endfor %}
  </thead>
  <tr>
    <td>Base</td>
    {% for property in properties %}
      {% set constant = attribute(stats.mind.constant, property) %}
      {% set conditional = attribute(stats.mind.conditional, property) %}

      <td>
        {{ constant ?: '—' }}
        {% if (conditional and (conditional != constant)) %}
          ({{ conditional }})
        {% endif %}
      </td>
    {% endfor %}
  </tr>
  <tr>
    <td>Bonus</td>
    {% for property in properties %}
    {% set constant = attribute(stats.shell.constant, property) %}
    {% set conditional = attribute(stats.shell.conditional, property) %}
      <td>
        {{ constant ?: '—' }}
        {% if (conditional and (conditional != constant)) %}
            ({{ conditional }})
        {% endif %}
      </td>
  {% endfor %}
  </tr>
  <tr class="summary-row">
    <td>Total</td>
    {% for property in properties %}
    {% set constant = attribute(stats.total.constant, property) %}
    {% set conditional = attribute(stats.total.conditional, property) %}

      <td>
        {{ constant ?: '—' }}
        {% if (conditional and (conditional != constant)) %}
            ({{ conditional }})
        {% endif %}
      </td>
  {% endfor %}
  </tr>
</table>

